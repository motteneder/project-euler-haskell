month = [" January", " February", " March", " April", " May", " June", " July", " August", " September", " November", " December"]

day :: Int -> String
day d  
      | d `mod` 10 == 1 = show(d) ++ "st"
      | d `mod` 10 == 2 = show(d) ++ "nd"
      | d `mod` 10 == 3 = show(d) ++ "rd"
      | otherwise = show(d) ++ "th"

showDate :: (Int, Int, Int) -> String
showDate (d, m, y) = day(d) ++ last(take m month) ++ "," ++ show(y)